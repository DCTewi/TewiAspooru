@{
    var TextPageTitle = "TewiBoard";
}

<!DOCTYPE html>
<html lang="zh-cn">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <meta name="description" content="TewiBoard is a image board template." />
    <meta name="keyword" content="Imageboard, tewiboard, tewi, dctewi, 2ch, 4chan, komica, A岛" />
    <meta name="robot" content="index, follow" />
    <meta name="application-name" content="tewiboard" />
    <meta name="author" content="dctewi@dctewi.com" />

    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.staticfile.org/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/site-style.css" />

    <script src="https://cdn.staticfile.org/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <title>@ViewBag.Title - @TextPageTitle</title>
</head>

<body>
    <div class="wrapper">
        <header id="Header">
            @await Html.PartialAsync("_Header")
        </header>

        <div class="container" id="MainContainer">
            @RenderBody()

        </div>

        @RenderSection("PageNav", false)

        <footer id="Footer">
            @await Html.PartialAsync("_Footer")
            <div id="PostBtnRow">
                @await Html.PartialAsync("_Post", new CardModel
                {
                    Hash = DateTime.Now.GetHashCode().ToString(),

                    ReplyId = null,
                    ReplyTop = null
                })
            </div>
        </footer>
    </div>
</body>

</html>